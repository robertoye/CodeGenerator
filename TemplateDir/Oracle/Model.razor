using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace @Model.Table.CodeNameSpace
{
    public class @Model.Table.Name
    {
        @foreach (var i in Model.Table.Fields){
        	@cFieldDefine(i.RawType,i.Name)
        }
    }
